# Moodify Backend Configuration - Local LLM Version (Ollama)
# =========================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# SPOTIFY API CONFIGURATION
# =============================================================================

# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/callback

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session secret key (generate a random string)
SESSION_SECRET=your_random_secret_key_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend URLs (comma-separated for multiple origins)
FRONTEND_URLS=http://127.0.0.1:5173

# Where to redirect after successful login
POST_LOGIN_REDIRECT=http://127.0.0.1:5173/

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama server URL (default: localhost:11434)
OLLAMA_URL=http://localhost:11434

# Ollama model to use (default: llama3.2:3b)
OLLAMA_MODEL=llama3.2:3b
